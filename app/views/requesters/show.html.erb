<form class ="text-center border-light p-5">
  <p id="notice"><%= notice %></p>
  <h2 class="card-header info-color white-text text-center">Requester Information</h2>
  <p>
    <strong>Company Name:</strong>
    <%= @requester.company_name %>
  </p>

  <p>
    <strong>CNPJ:</strong>
    <%= @requester.cnpj %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @requester.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @requester.phone %>
  </p>

  <br/>
    <div id="credit_requests_wrapper">
      <%= render @requester.credit_requests %>
      <div id="form">
      <br/>
      <%= render "credit_requests/form" %>
    </div>
  </div>

  <p class="text-center"> <%= link_to 'Edit', edit_requester_path(@requester) %> |
  <%= link_to 'Back', requesters_path %> </p>
</form>